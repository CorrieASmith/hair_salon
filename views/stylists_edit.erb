<h2>Update <%= @stylist.name %>'s information:</h2>

<form action="/stylists/<%= @stylist_id %>/name" method="post">

  <input name="_method" type="hidden" value='patch'>
  <input id="id" name="id" type="hidden" value="<%= @stylist_id %>">

